<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dots="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/s_200dp"
    android:layout_height="@dimen/s_200dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <com.shinc.duobaohui.customview.imp.CustomTextView
            android:id="@+id/pay_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付中"
            android:textColor="@android:color/white"
            android:textSize="@dimen/s_18dp" />

        <com.shinc.duobaohui.customview.imp.DotsTextView
            android:id="@+id/pay_dots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/pay_text"
            android:textColor="@color/white"
            android:textSize="@dimen/s_30dp"
            dots:autoplay="false"
            dots:period="1000"/>

    </RelativeLayout>

</RelativeLayout>