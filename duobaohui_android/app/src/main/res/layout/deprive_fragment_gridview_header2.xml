<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/product_title"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/s_40dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <com.shinc.duobaohui.customview.imp.CustomTextView
            android:id="@+id/mood_tv"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="人气"
            android:textColor="@color/c_5f5f5f"
            android:textSize="@dimen/s_14dp" />

        <com.shinc.duobaohui.customview.imp.CustomTextView
            android:id="@+id/lastest_tv"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="最新"
            android:textColor="@color/c_5f5f5f"
            android:textSize="@dimen/s_14dp" />

        <com.shinc.duobaohui.customview.imp.CustomTextView
            android:id="@+id/progress_tv"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="进度"
            android:textColor="@color/c_5f5f5f"
            android:textSize="@dimen/s_14dp" />

        <RelativeLayout
            android:id="@+id/product_num"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center">

            <com.shinc.duobaohui.customview.imp.CustomTextView
                android:id="@+id/product_need_num"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text="总需人数"
                android:textColor="@color/c_5f5f5f"
                android:textSize="@dimen/s_14dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="@dimen/s_2dp"
                android:layout_toRightOf="@id/product_need_num"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/icon_arrow_up"
                    android:layout_width="@dimen/s_6dp"
                    android:layout_height="@dimen/s_5dp"
                    android:src="@drawable/icon_up" />

                <ImageView
                    android:id="@+id/icon_arrow_down"
                    android:layout_width="@dimen/s_6dp"
                    android:layout_height="@dimen/s_5dp"
                    android:layout_below="@id/icon_arrow_up"
                    android:src="@drawable/icon_down" />
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>