<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/s_250dp"
    android:layout_height="@dimen/s_150dp"
    android:layout_gravity="center"
    android:background="@drawable/dialog_bk">

    <com.shinc.duobaohui.customview.imp.CustomTextView
        android:id="@+id/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/s_40dp"
        android:background="@color/c_ff5a5a"
        android:gravity="center"
        android:text="提示"
        android:textColor="@color/c_ffffff"
        android:textSize="@dimen/s_14sp" />

    <LinearLayout
        android:id="@+id/btn_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:padding="@dimen/s_10dp">

        <com.shinc.duobaohui.customview.imp.CustomTextView
            android:id="@+id/dialog_shaidan_layout_yes"
            style="@style/red_btn_style"
            android:layout_width="0dp"
            android:layout_height="@dimen/s_25dp"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/s_10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确定"
            android:textSize="@dimen/s_15sp" />

        <com.shinc.duobaohui.customview.imp.CustomTextView
            android:id="@+id/dialog_shaidan_layout_no"
            style="@style/red_btn_style"
            android:layout_width="0dp"
            android:layout_height="@dimen/s_25dp"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textSize="@dimen/s_15sp" />

    </LinearLayout>

    <com.shinc.duobaohui.customview.imp.CustomTextView
        android:id="@+id/dialog_info"
        android:layout_width="match_parent"
        android:layout_height="@dimen/s_40dp"
        android:layout_above="@id/btn_layout"
        android:layout_below="@+id/dialog_title"
        android:gravity="center"
        android:text="是否要取消订单？"
        android:textSize="@dimen/s_14sp" />


</RelativeLayout>