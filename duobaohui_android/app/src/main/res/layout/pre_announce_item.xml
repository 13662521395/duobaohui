<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/s_10dp">


    <RelativeLayout
        android:id="@+id/item_title"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/s_40dp">

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/s_0.5dp"
            android:layout_alignParentTop="true"
            android:background="@color/c_e4e4e4" />

        <LinearLayout
            android:id="@+id/goto_current_layout"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/s_39dp"
            android:layout_marginTop="@dimen/s_0.5dp"
            android:background="@drawable/layout_grey_selector"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.shinc.duobaohui.customview.imp.CustomTextView
                android:id="@+id/active_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/s_10dp"
                android:text="第120期"
                android:textColor="@color/c_666666" />

            <com.shinc.duobaohui.customview.imp.CustomTextView
                android:id="@+id/open_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/s_10dp"
                android:text="请稍候，正在揭晓..."
                android:textColor="@color/c_ff5a5a" />


        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/s_10dp"
            android:src="@drawable/icon_more" />

        <View
            android:id="@+id/cut_line"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/s_1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/s_10dp"
            android:layout_marginRight="@dimen/s_10dp"
            android:background="@drawable/shape_cut_off_line"
            android:layerType="software" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/goto_Ta"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_title"
        android:background="@drawable/layout_grey_selector">

        <com.shinc.duobaohui.customview.imp.CircleImageView
            android:id="@+id/pre_announce_user_header"
            android:layout_width="@dimen/s_40dp"
            android:layout_height="@dimen/s_40dp"
            android:layout_margin="@dimen/s_10dp"
            android:src="@drawable/icon_head_small" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/s_10dp"
            android:layout_toRightOf="@id/pre_announce_user_header"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <com.shinc.duobaohui.customview.imp.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="昵称："
                    android:textColor="@color/c_afafaf"
                    android:textSize="@dimen/s_14dp" />

                <com.shinc.duobaohui.customview.imp.CustomTextView
                    android:id="@+id/winner_nick_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="今天跟我去夺宝"
                    android:textColor="@color/c_00b7ee"
                    android:textSize="@dimen/s_14dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/s_5dp">

                <com.shinc.duobaohui.customview.imp.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="用户ID："
                    android:textColor="@color/c_afafaf"
                    android:textSize="@dimen/s_14dp" />

                <com.shinc.duobaohui.customview.imp.CustomTextView
                    android:id="@+id/winner_user_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12345678(唯一不变标识)"
                    android:textColor="@color/c_666666"
                    android:textSize="@dimen/s_14dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/s_5dp">

                <com.shinc.duobaohui.customview.imp.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="幸运号码："
                    android:textColor="@color/c_afafaf"
                    android:textSize="@dimen/s_14dp" />

                <com.shinc.duobaohui.customview.imp.CustomTextView
                    android:id="@+id/winner_user_luck_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12345678"
                    android:textColor="@color/c_ff5a5a"
                    android:textSize="@dimen/s_14dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/s_5dp"
                android:layout_marginTop="@dimen/s_5dp">

                <com.shinc.duobaohui.customview.imp.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="本期参与："
                    android:textColor="@color/c_afafaf"
                    android:textSize="@dimen/s_14dp" />

                <com.shinc.duobaohui.customview.imp.CustomTextView
                    android:id="@+id/winner_user_take_part_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textColor="@color/c_ff5a5a"
                    android:textSize="@dimen/s_14dp" />

                <com.shinc.duobaohui.customview.imp.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="人次"
                    android:textColor="@color/c_666666"
                    android:textSize="@dimen/s_14dp" />

            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/s_0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/c_e4e4e4" />
    </RelativeLayout>

</RelativeLayout>