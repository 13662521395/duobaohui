<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_bk"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/s_35dp"
        android:background="@color/c_efefef"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/finish_pay_page"
        android:visibility="gone" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/s_100dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="支付错误，要放弃该订单么"
        android:textSize="@dimen/s_16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/s_35dp">

        <Button
            android:id="@+id/finish_dialog_yes"
            style="@style/red_btn_style"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/s_17dp"
            android:layout_marginRight="@dimen/s_5dp"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:text="放弃"
            android:textSize="@dimen/s_16sp" />

        <Button
            android:id="@+id/finish_dialog_no"
            style="@style/red_btn_style"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/s_5dp"
            android:layout_marginRight="@dimen/s_17dp"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:text="继续支付"
            android:textSize="@dimen/s_16sp" />
    </LinearLayout>
</LinearLayout>