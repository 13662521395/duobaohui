<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_efefef"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/s_45dp"
        android:background="@color/c_ffffff">

        <ImageView
            android:id="@+id/person_info_layout_img_back"
            android:layout_width="@dimen/s_40dp"
            android:layout_height="fill_parent"
            android:padding="@dimen/s_15dp"
            android:src="@drawable/icon_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="修改手机号码"
            android:textColor="@color/c_666666"
            android:textSize="@dimen/s_18dp" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/s_10dp"
        android:background="@android:color/white">

        <com.shinc.duobaohui.customview.imp.CustomTextView
            android:layout_width="@dimen/s_70dp"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:textColor="@color/c_666666"
            android:paddingLeft="@dimen/s_10dp"
            android:text="手机号" />

        <EditText
            android:id="@+id/change_phonenumber_et"
            android:layout_width="match_parent"
            android:layout_height="@dimen/s_50dp"
            android:background="@android:color/white"
            android:gravity="center_vertical"
            android:hint="@string/register_edit_phone_num"
            android:inputType="phone"
            android:paddingLeft="@dimen/s_13dp"
            android:singleLine="true"
            android:textColorHint="@color/c_afafaf"
            android:textSize="@dimen/s_13dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/s_50dp"
        android:layout_marginTop="@dimen/s_1dp"
        android:background="@android:color/white">

        <com.shinc.duobaohui.customview.imp.CustomTextView
            android:layout_width="@dimen/s_70dp"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:textColor="@color/c_666666"
            android:paddingLeft="@dimen/s_10dp"
            android:text="验证码" />

        <EditText
            android:id="@+id/register_edit_verify_code_et"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginRight="@dimen/s_30dp"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:gravity="center_vertical"
            android:hint="@string/register_edit_verify_code"
            android:inputType="textPassword"
            android:maxLength="15"
            android:paddingLeft="@dimen/s_13dp"
            android:singleLine="true"
            android:textColorHint="@color/c_afafaf"
            android:textSize="@dimen/s_13dp" />

        <TextView
            android:id="@+id/register_get_verify_code_tv"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginBottom="@dimen/s_8dp"
            android:layout_marginRight="@dimen/s_20dp"
            android:layout_marginTop="@dimen/s_8dp"
            android:layout_weight="1"
            style="@style/red_btn_style"
            android:gravity="center"
            android:text="@string/register_get_verify_code"
            android:textColor="@android:color/white"
            android:textSize="@dimen/s_13dp" />
    </LinearLayout>


</LinearLayout>