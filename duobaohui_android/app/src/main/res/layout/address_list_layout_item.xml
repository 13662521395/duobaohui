<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/s_70dp"
    android:background="@color/c_ffffff"
    android:paddingBottom="@dimen/s_10dp"
    android:paddingLeft="@dimen/s_15dp"
    android:paddingRight="@dimen/s_15dp"
    android:paddingTop="@dimen/s_10dp">

    <com.shinc.duobaohui.customview.imp.CustomTextView
        android:id="@+id/address_list_layout_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxEms="10"
        android:singleLine="true"
        android:text="小米"
        android:textColor="@color/c_666666"
        android:textSize="@dimen/s_16sp" />

    <com.shinc.duobaohui.customview.imp.CustomTextView
        android:id="@+id/address_list_layout_item_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="182374038498"
        android:textColor="@color/c_666666"
        android:textSize="@dimen/s_16sp" />

    <com.shinc.duobaohui.customview.imp.CustomTextView
        android:id="@+id/address_list_layout_item_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/address_list_layout_item_name"
        android:layout_marginTop="@dimen/s_10dp"
        android:gravity="center_vertical"
        android:text="北京市朝阳区望京sohoT2 1234"
        android:textColor="@color/c_afafaf"
        android:textSize="@dimen/s_13sp" />
</RelativeLayout>