<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_efefef">

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/s_48dp"
        android:layout_alignParentTop="true"
        android:background="@color/c_ffffff">

        <ImageView
            android:id="@+id/add_show_order_layout_img_back"
            android:layout_width="@dimen/s_40dp"
            android:layout_height="fill_parent"
            android:padding="@dimen/s_15dp"
            android:src="@drawable/icon_back" />

        <com.shinc.duobaohui.customview.imp.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="我要晒单"
            android:textColor="@color/c_666666"
            android:textSize="@dimen/s_18dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/s_0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/c_e4e4e4" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/product_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:background="#f0f0f0"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/s_0.5dp"
            android:background="@color/c_efefef" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/s_15dp"
            android:orientation="horizontal">

            <com.shinc.duobaohui.customview.imp.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/s_10dp"
                android:text="获奖商品: "
                android:textColor="#afafaf"
                android:textSize="@dimen/s_15dp" />

            <com.shinc.duobaohui.customview.imp.CustomTextView
                android:id="@+id/show_product_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/s_5dp"
                android:text="（第二期）iphone"
                android:textColor="#00b7ee"
                android:textSize="@dimen/s_15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/s_5dp"
            android:orientation="horizontal">

            <com.shinc.duobaohui.customview.imp.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/s_10dp"
                android:text="本期参与:"
                android:textColor="#afafaf"
                android:textSize="@dimen/s_15dp" />

            <com.shinc.duobaohui.customview.imp.CustomTextView
                android:id="@+id/show_canyu_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/s_5dp"
                android:text="1"
                android:textColor="#ff5a5a"
                android:textSize="@dimen/s_15dp" />

            <com.shinc.duobaohui.customview.imp.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 人次"
                android:textColor="#666666"
                android:textSize="@dimen/s_15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/s_5dp"
            android:orientation="horizontal">

            <com.shinc.duobaohui.customview.imp.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/s_10dp"
                android:text="幸运号码:"
                android:textColor="#afafaf"
                android:textSize="@dimen/s_15dp" />

            <com.shinc.duobaohui.customview.imp.CustomTextView
                android:id="@+id/show_product_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/s_5dp"
                android:text="234567"
                android:textColor="#ff5a5a"
                android:textSize="@dimen/s_15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/s_15dp"
            android:layout_marginTop="@dimen/s_5dp"
            android:orientation="horizontal">

            <com.shinc.duobaohui.customview.imp.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/s_10dp"
                android:text="揭晓时间: "
                android:textColor="#afafaf"
                android:textSize="@dimen/s_15dp" />

            <com.shinc.duobaohui.customview.imp.CustomTextView
                android:id="@+id/show_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/s_5dp"
                android:text="2015-07-08"
                android:textColor="#666666"
                android:textSize="@dimen/s_15dp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_info"
        android:background="@color/fff"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/s_0.5dp"
            android:background="@color/c_efefef" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/s_50dp"
            android:orientation="horizontal">

            <com.shinc.duobaohui.customview.imp.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/s_10dp"
                android:text="标题"
                android:textColor="#666666"
                android:textSize="@dimen/s_16dp" />

            <com.shinc.duobaohui.customview.imp.CustomEditText
                android:id="@+id/show_commend_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:background="@color/fff"
                android:hint="请输入标题文字，字数限制6-20字"
                android:maxLength="20"
                android:paddingRight="@dimen/s_10dp"
                android:textColor="#afafaf"
                android:textColorHint="#afafaf"
                android:textSize="@dimen/s_16dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/s_0.5dp"
            android:background="@color/c_efefef" />

        <com.shinc.duobaohui.customview.imp.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/s_30dp"
            android:layout_marginLeft="@dimen/s_10dp"
            android:background="@color/fff"
            android:gravity="center_vertical"
            android:text="详细描述"
            android:textColor="#666666"
            android:textSize="@dimen/s_16dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/s_0.5dp"
            android:background="@color/c_efefef" />

        <com.shinc.duobaohui.customview.imp.CustomEditText
            android:id="@+id/show_commend_value"
            android:layout_width="match_parent"
            android:layout_height="@dimen/s_75dp"
            android:layout_marginLeft="@dimen/s_10dp"
            android:layout_marginRight="@dimen/s_15dp"
            android:layout_marginTop="@dimen/s_7dp"
            android:background="@color/fff"
            android:gravity="top"
            android:hint="请输入获奖感言，字数限制20-100字。"
            android:maxLength="100"
            android:textColor="#afafaf"
            android:textColorHint="#afafaf"
            android:textSize="@dimen/s_16dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/s_0.5dp"
            android:background="@color/c_efefef" />

        <com.shinc.duobaohui.customview.imp.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/s_30dp"
            android:layout_marginLeft="@dimen/s_10dp"
            android:gravity="center_vertical"
            android:text="图片展示"
            android:textColor="#666666"
            android:textSize="@dimen/s_16dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/s_0.5dp"
            android:background="@color/c_efefef" />
    </LinearLayout>

    <com.shinc.duobaohui.utils.icon.ui.DynamicPost
        android:id="@+id/show_commend_image_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/comment"
        android:background="@color/fff" />

    <RelativeLayout
        android:id="@+id/show_commit_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/s_50dp"
        android:layout_below="@+id/show_commend_image_show"
        android:layout_marginTop="@dimen/s_10dp"
        android:background="@color/fff">

        <com.shinc.duobaohui.customview.imp.CustomTextView
            android:id="@+id/show_commit"
            android:layout_width="@dimen/s_160dp"
            android:layout_height="@dimen/s_35dp"
            android:layout_centerInParent="true"
            android:background="@drawable/red_btn_selector"
            android:gravity="center"
            android:text="提交"
            android:textColor="@color/fff"
            android:textSize="@dimen/s_18dp" />
    </RelativeLayout>

    <com.shinc.duobaohui.customview.imp.WaitLoading
        android:id="@+id/wait_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/no_web"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title"
        android:background="@android:color/white"
        android:visibility="gone">

        <ImageView
            android:layout_width="@dimen/s_150dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:src="@drawable/icon_noweb" />
    </RelativeLayout>
</RelativeLayout>