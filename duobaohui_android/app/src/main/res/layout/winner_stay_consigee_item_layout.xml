<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/c_ffffff"
    android:orientation="vertical"
    android:paddingRight="@dimen/s_15dp">

    <com.shinc.duobaohui.customview.imp.CustomTextView
        android:id="@+id/winner_stay_consigee_layout_state"
        android:layout_width="match_parent"
        android:layout_height="@dimen/s_30dp"
        android:background="@color/c_f7f7f7"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/s_10dp"
        android:text="处理中"
        android:textColor="@color/c_666666"
        android:textSize="@dimen/s_14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/s_10dp"
        android:paddingLeft="@dimen/s_10dp"
        android:paddingTop="@dimen/s_10dp">

        <ImageView
            android:id="@+id/winner_stay_consigee_layout_imgUrl"
            android:layout_width="@dimen/s_80dp"
            android:layout_height="@dimen/s_80dp"
            android:src="@drawable/icon_nopic" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/s_10dp"
            android:orientation="vertical">

            <com.shinc.duobaohui.customview.imp.CustomTextView
                android:id="@+id/winner_stay_consigee_layout_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="(第1期)iPone6 4.7英寸 64G"
                android:textColor="@color/c_666666"
                android:textSize="@dimen/s_15sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/winner_stay_consigee_layout_name"
                android:layout_marginTop="@dimen/s_10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.shinc.duobaohui.customview.imp.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/s_10dp"
                        android:text="共需:"
                        android:textColor="@color/c_666666"
                        android:textSize="@dimen/s_15sp" />

                    <com.shinc.duobaohui.customview.imp.CustomTextView
                        android:id="@+id/winner_stay_consigee_layout_totalNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10,000"
                        android:textColor="@color/c_666666"
                        android:textSize="@dimen/s_15sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/s_5dp"
                    android:orientation="horizontal">

                    <com.shinc.duobaohui.customview.imp.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/s_10dp"
                        android:text="本期参与:"
                        android:textColor="@color/c_666666"

                        android:textSize="@dimen/s_15sp" />

                    <com.shinc.duobaohui.customview.imp.CustomTextView
                        android:id="@+id/winner_stay_consigee_layout_frequency"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100"
                        android:textColor="@color/c_ff5a5a"
                        android:textSize="@dimen/s_15sp" />

                    <com.shinc.duobaohui.customview.imp.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/s_3dp"
                        android:text="人次"
                        android:textColor="@color/c_666666"
                        android:textSize="@dimen/s_15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/s_5dp"
                    android:orientation="horizontal">

                    <com.shinc.duobaohui.customview.imp.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/s_10dp"
                        android:text="幸运号码:"
                        android:textColor="@color/c_666666"
                        android:textSize="@dimen/s_15sp" />

                    <com.shinc.duobaohui.customview.imp.CustomTextView
                        android:id="@+id/winner_stay_consigee_layout_lunckyCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1001234"
                        android:textColor="@color/c_ff5a5a"
                        android:textSize="@dimen/s_15sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/s_5dp"
                    android:orientation="horizontal">

                    <com.shinc.duobaohui.customview.imp.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/s_10dp"
                        android:text="揭晓时间:"
                        android:textColor="@color/c_666666"
                        android:textSize="@dimen/s_15sp" />

                    <com.shinc.duobaohui.customview.imp.CustomTextView
                        android:id="@+id/winner_stay_consigee_layout_outTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" 2015－09－13 19:18:28"
                        android:textColor="@color/c_666666"
                        android:textSize="@dimen/s_15sp" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="@dimen/s_0.5dp"
                android:layout_height="@dimen/s_50dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/s_10dp"
                android:layout_toLeftOf="@+id/winner_stay_consigee_layout_tvBtn"
                android:background="@color/c_afafaf"></View>

            <com.shinc.duobaohui.customview.imp.CustomTextView
                android:id="@+id/winner_stay_consigee_layout_tvBtn"
                style="@style/red_btn_style"
                android:layout_width="@dimen/s_75dp"
                android:layout_height="@dimen/s_40dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="确认收货"
                android:textSize="@dimen/s_16sp" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/winner_stay_consigee_layout_layoutAddress"
        android:layout_width="match_parent"
        android:layout_height="@dimen/s_63dp">


        <ImageView
            android:id="@+id/winner_stay_consigee_layout_icon_address"
            android:layout_width="@dimen/s_45dp"
            android:layout_height="@dimen/s_45dp"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/s_10dp"
            android:src="@drawable/icon_add" />

        <View
            android:id="@+id/winner_stay_consigee_layout_height_line"
            android:layout_width="@dimen/s_0.5dp"
            android:layout_height="@dimen/s_43dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/winner_stay_consigee_layout_icon_address"
            android:background="@color/c_e4e4e4"/>

        <LinearLayout
            android:id="@+id/winner_stay_consigee_layout_address_nameLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/s_20dp"
            android:layout_marginTop="@dimen/s_13dp"
            android:layout_toRightOf="@+id/winner_stay_consigee_layout_height_line"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/icon_add_man" />

            <com.shinc.duobaohui.customview.imp.CustomTextView
                android:id="@+id/winner_stay_consigee_layout_address_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/s_5dp"
                android:text="小明"
                android:textColor="@color/c_666666"
                android:textSize="@dimen/s_15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/s_30dp"
            android:layout_marginTop="@dimen/s_13dp"
            android:layout_toRightOf="@+id/winner_stay_consigee_layout_address_nameLayout"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/icon_add_phone" />

            <com.shinc.duobaohui.customview.imp.CustomTextView
                android:id="@+id/winner_stay_consigee_layout_address_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/s_5dp"
                android:text="18612309812"
                android:textColor="@color/c_666666"
                android:textSize="@dimen/s_15sp" />
        </LinearLayout>

        <com.shinc.duobaohui.customview.imp.CustomTextView
            android:id="@+id/winner_stay_consigee_layout_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/s_9dp"
            android:layout_marginLeft="@dimen/s_20dp"
            android:layout_marginTop="@dimen/s_9dp"
            android:layout_toRightOf="@+id/winner_stay_consigee_layout_height_line"
            android:singleLine="true"
            android:text="北京市朝阳区望京SOHO T2 1234"
            android:textColor="@color/c_afafaf"
            android:textSize="@dimen/s_13sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/s_30dp"
        android:background="@color/c_f7f7f7"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/s_10dp">

        <com.shinc.duobaohui.customview.imp.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/s_30dp"
            android:background="@color/c_f7f7f7"
            android:gravity="center_vertical"
            android:text="订单号:"
            android:textColor="@color/c_666666"
            android:textSize="@dimen/s_14sp" />

        <com.shinc.duobaohui.customview.imp.CustomTextView
            android:id="@+id/winner_stay_consigee_layout_number"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/s_30dp"
            android:background="@color/c_f7f7f7"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/s_10dp"
            android:text="1234567890"
            android:textColor="@color/c_666666"
            android:textSize="@dimen/s_14sp" />
    </LinearLayout>
</LinearLayout>