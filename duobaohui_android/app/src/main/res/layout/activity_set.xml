<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_efefef"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/back_rl"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/s_48dp"
        android:background="#ffffff"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:padding="@dimen/s_15dp"
            android:src="@drawable/icon_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="设置"
            android:textColor="#666666"
            android:textSize="@dimen/s_18dp" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/s_0.5dp"
        android:background="@color/c_e4e4e4"/>

    <RelativeLayout
        android:id="@+id/how_set_faceback"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/s_48dp"
        android:background="@drawable/layout_grey_selector"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/s_15dp"
            android:text="用户反馈"
            android:textColor="#666666" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/s_10dp"
            android:src="@drawable/icon_more" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/s_0.5dp"
        android:background="@color/c_e4e4e4"/>

    <RelativeLayout
        android:id="@+id/how_calculate_luck_number"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/s_48dp"
        android:background="@drawable/layout_grey_selector"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/s_15dp"
            android:text="怎么计算幸运号码"
            android:textColor="#666666" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/s_10dp"
            android:src="@drawable/icon_more" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/s_0.5dp"
        android:background="@color/c_e4e4e4" />

    <RelativeLayout
        android:id="@+id/check_update"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/s_48dp"
        android:background="@drawable/layout_grey_selector"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/s_15dp"
            android:text="检查更新"
            android:textColor="#666666" />

        <TextView
            android:id="@+id/visition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/s_10dp"
            android:text="V1.0"
            android:textColor="#666666" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/s_0.5dp"
        android:background="@color/c_e4e4e4" />

    <RelativeLayout
        android:id="@+id/about_app"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/s_48dp"
        android:background="@drawable/layout_grey_selector"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/s_15dp"
            android:text="关于夺宝会"
            android:textColor="#666666" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/s_10dp"
            android:src="@drawable/icon_more" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/s_0.5dp"
        android:background="@color/c_e4e4e4" />

    <RelativeLayout
        android:id="@+id/login_out_layout"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/s_50dp"
        android:layout_marginTop="@dimen/s_10dp"
        android:background="#ffffff"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/login_out"
            style="@style/red_btn_style"
            android:layout_width="@dimen/s_160dp"
            android:layout_height="@dimen/s_35dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/s_15dp"
            android:gravity="center"
            android:text="退出登录"
            android:textColor="#ffffff"
            android:textSize="@dimen/s_16dp" />

    </RelativeLayout>
</LinearLayout>