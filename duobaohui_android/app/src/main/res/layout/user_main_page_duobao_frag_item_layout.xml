<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/c_ffffff"
    android:paddingBottom="@dimen/s_15dp"
    android:paddingRight="@dimen/s_10dp"
    android:paddingTop="@dimen/s_15dp">

    <ImageView
        android:id="@+id/user_main_page_duobao_frag_itema_layout_img"
        android:layout_width="@dimen/s_90dp"
        android:layout_height="@dimen/s_90dp"
        android:layout_marginLeft="@dimen/s_15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/user_main_page_duobao_frag_itema_layout_img"
        android:orientation="vertical">

        <com.shinc.duobaohui.customview.imp.CustomTextView
            android:id="@+id/user_main_page_duobao_frag_itema_layout_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/s_5dp"
            android:layout_marginLeft="@dimen/s_12dp"
            android:textColor="@color/c_666666"
            android:textSize="@dimen/s_15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/l1"
                android:layout_width="@dimen/s_1dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/s_12dp"
                android:layout_weight="1.6"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/s_10dp"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <ProgressBar
                        android:id="@+id/user_main_page_duobao_frag_itema_layout_progressbar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/s_3dp"
                        android:layout_marginBottom="@dimen/s_3dp"
                        android:layout_marginTop="@dimen/s_5dp"
                        android:max="100"
                        android:progressDrawable="@drawable/progressbar_bg" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.shinc.duobaohui.customview.imp.CustomTextView
                            android:id="@+id/user_main_page_duobao_frag_itema_layout_layoutTotalNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="共需:10.000"
                            android:textColor="@color/c_666666"
                            android:textSize="@dimen/s_12sp" />


                        <com.shinc.duobaohui.customview.imp.CustomTextView
                            android:id="@+id/user_main_page_duobao_frag_itema_layout_layoutCutNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/s_10dp"
                            android:text="剩余:7.000"
                            android:textColor="@color/c_666666"
                            android:textSize="@dimen/s_12sp" />
                    </RelativeLayout>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/s_5dp">

                    <LinearLayout
                        android:id="@+id/rl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.shinc.duobaohui.customview.imp.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:text="本期参与："
                            android:textColor="@color/c_666666"
                            android:textSize="@dimen/s_14sp" />

                        <com.shinc.duobaohui.customview.imp.CustomTextView
                            android:id="@+id/user_main_page_duobao_frag_itema_layout_lienerLaoutFrequency"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:textColor="@color/c_ff5a5a"
                            android:textSize="@dimen/s_14sp" />

                    </LinearLayout>

                    <com.shinc.duobaohui.customview.imp.CustomTextView
                        android:id="@+id/user_main_page_duobao_frag_itema_layout_lienerLaoutSearchInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/rl"
                        android:layout_gravity="right"
                        android:layout_marginTop="@dimen/s_2dp"
                        android:gravity="right"
                        android:text="查看夺宝号"
                        android:textColor="@color/c_00b7ee"
                        android:textSize="@dimen/s_14sp" />

                    <com.shinc.duobaohui.customview.imp.CustomTextView
                        android:id="@+id/user_main_page_duobao_frag_itema_layout_Beingrevealed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/user_main_page_duobao_frag_itema_layout_lienerLaoutSearchInfo"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/s_7dp"
                        android:gravity="right"
                        android:text="正在揭晓"
                        android:textColor="@color/c_ff5a5a"
                        android:textSize="@dimen/s_14sp" />
                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="left">

                <View
                    android:layout_width="@dimen/s_1dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:background="@color/c_efefef" />

                <com.shinc.duobaohui.customview.imp.CustomTextView
                    android:id="@+id/user_main_page_duobao_frag_itema_layout_addMai"
                    style="@style/red_btn_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/s_20dp"
                    android:padding="@dimen/s_12dp"
                    android:text="跟买" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>