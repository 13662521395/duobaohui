<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_efefef"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/s_45dp"
        android:background="@color/c_ffffff">

        <ImageView
            android:id="@+id/person_info_layout_img_back"
            android:layout_width="@dimen/s_40dp"
            android:layout_height="fill_parent"
            android:padding="@dimen/s_15dp"
            android:src="@drawable/icon_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="修改昵称"
            android:textColor="@color/c_666666"
            android:textSize="@dimen/s_18dp" />

        <TextView
            android:id="@+id/submit"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:paddingLeft="@dimen/s_10dp"
            android:paddingRight="@dimen/s_10dp"
            android:text="确定"
            android:textColor="@color/c_00b7ee"
            android:textSize="@dimen/s_14dp" />


    </RelativeLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/s_10dp"
        android:background="@android:color/white">

        <com.shinc.duobaohui.customview.imp.CustomTextView
            android:layout_width="@dimen/s_70dp"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/s_10dp"
            android:text="昵称" />

        <EditText
            android:id="@+id/change_nickname_et"
            android:layout_width="match_parent"
            android:layout_height="@dimen/s_50dp"
            android:background="@android:color/white"
            android:gravity="center_vertical"
            android:maxLength="15"
            android:paddingLeft="@dimen/s_13dp"
            android:hint="@string/nick_name_hint"
            android:singleLine="true"
            android:textColorHint="@color/c_afafaf"
            android:textSize="@dimen/s_13dp" />
    </LinearLayout>


</LinearLayout>